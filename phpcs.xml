<?xml version="1.0"?>
<ruleset name="MiniMovies">
    <description>PSR-12 coding standard for Mini Movies</description>

    <!-- Paths to check -->
    <file>src</file>
    <file>public</file>
    <file>config</file>

    <!-- Exclude vendor -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Use PSR-12 as base -->
    <rule ref="PSR12"/>

    <!-- Ignore line endings on Windows -->
    <rule ref="Generic.Files.LineEndings">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <!-- Allow declare statement before docblock -->
    <rule ref="PSR12.Files.FileHeader.IncorrectOrder">
        <exclude-pattern>*</exclude-pattern>
    </rule>

    <!-- Allow short array syntax -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Line length warning at 120, error at 150 -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="150"/>
        </properties>
    </rule>

    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Show colors -->
    <arg name="colors"/>

    <!-- Show sniff codes in reports -->
    <arg value="s"/>
</ruleset>
